@model OmPrabha.Models.Master

@{
    ViewBag.Title = "PlanMasterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PlanMasterList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">Plan Master List</li>
        </ul>
    </section>
    
    <div class="section-body">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Plan Master List</h4>

                    <p style="color: red">
                        @TempData["PlanMaster"]
                    </p>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4"> </div><div class="col-sm-6"> </div>
                        <div class="col-sm-2"><a class="btn btn-info" href="/Master/PlanMaster">Add New</a> </div>
                    </div>
                    <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Plan Name</th>
                                <th>Plan Month</th>
                                <th>Alotment Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstPlan != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstPlan)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@Item.PlanName</td>
                                            <td>@Item.PlanMonth</td>
                                            <td>@Item.AlotmentAmount</td>

                                            <td>
                                                <a href="/Master/PlanMaster?Id=@Item.PK_PlanId" class="btn btn-info btn-sm">Edit</a>
                                                <a href="/Master/DeletePlanMaster?Id=@Item.PK_PlanId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this plan?');">Delete</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }


                                }
                            }

                        </tbody>

                    </table>











                </div>

            </div>
        </div>
    </div>

}

<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>

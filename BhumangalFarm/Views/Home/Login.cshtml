@model OmPrabha.Models.Home
@{
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}

@using (Html.BeginForm("LoginAction", "Home", FormMethod.Post, new { @id = "signupForm" }))
{
<main class="site-main content-area">
    <div class="container pt-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-sm-12 col-12">
                <div class="page-content-block">
                    <div class="col-md-12 rtcl-login-form-wrap shadow">
                        <h2 class="text-center">Login</h2>
                        <form id="rtcl-login-form" class="form-horizontal" method="post" novalidate="novalidate">
                            <div class="form-group">
                                <label for="rtcl-user-login" class="control-label">
                                    Username or E-mail
                                    <strong class="rtcl-required">*</strong>
                                </label>
                                <input type="text" name="LoginId" autocomplete="username" value="" id="LoginId" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="rtcl-user-pass" class="control-label">
                                    Password <strong class="rtcl-required">*</strong>
                                </label>
                                <input type="password" name="password" id="password" autocomplete="current-password" class="form-control" required>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <input type="submit" id="Login" class="btn btn-primary" name="Login" value="Login" />
                                
                            </div>
                            @*<div class="form-group">
                                <p class="rtcl-forgot-password">
                                    <a href="#">Forgot Your Password??</a>
                                </p>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
}
@model OmPrabha.Models.Plot

@{
    ViewBag.Title = "PrintVisitor";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Print Visitor</title>
    <style>
        table, th, td {
            font-size: medium;
            /*border: 1px solid black;*/
            border-collapse: collapse;
        }

        th, td {
            font-size: medium;
            padding: 5px;
        }
    </style>
    <link rel='shortcut icon' type='image/x-icon' href="~/AssetsWeb/img/layout-logo.jpg"/>
</head>
<body>
    <div style="border:3px solid #a20e0e;padding-left:10px;padding-right:10px;">
        <table style="border: 0px none black;">
            <tr style="border: 0px none black;">
                <td style="border: 0px none black;">
                    <img src="~/AssetsWeb/img/logoletter.png" height="120" width="150" />
                </td>
                <td style="border: 0px none black;"></td>
                <td style="border: 0px none black;">
                    <h1 style="color:#a20e0e">OM PRABHA INFRATECH PVT. LTD.</h1>
                </td>
            </tr>
        </table>
        <br />
        <table style="width: 100%;" class="table table-striped">
            <tr>
                <td style="border: 1px solid black;"><b>Site Name : </b>@ViewBag.SiteName</td>
                <td style="border: 1px solid black;"><b>AssociateID :    </b>@ViewBag.LoginId</td>

                <td style="border: 1px solid black;"><b>Associate Name :    </b>@ViewBag.AssociateName</td>

            </tr>
            <tr>
                <td style="border: 1px solid black;"><b>Amount : </b>@ViewBag.Amount</td>
                <td colspan="2" style="border: 1px solid black;"><b>Visit Date :    </b>@ViewBag.VisitDate</td>
            </tr>
        </table>
        &nbsp;&nbsp;&nbsp;
        <table style="width: 100%;" border="1">
            <thead>
                <tr>
                    <td><b>Sr No</b></td>
                    <td><b>Customer Name</b></td>
                    <td><b>Mobile No</b></td>
                    <td><b>Address</b></td>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    if (Model.lstVistor != null)
                    {
                        var i = 1;
                        foreach (var item in Model.lstVistor)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Mobile</td>
                                <td>@item.Address</td>
                            </tr>
                            i++;
                        }
                    }
                }
            </tbody>
        </table>
        <br />
        <table style="width: 100%;" class="table table-striped">

            <tbody>
                <tr>
                    <td style="text-align:left;"><b>Associate Sign.    </b></td>
                    <td style="text-align:right;margin-right:100px;"><b style="margin-right: 40px;">Auth Sign. </b></td>
                </tr>
            </tbody>
        </table>

        <br />
        <br />
        <br />
        <br />
    </div>
</body>
</html>


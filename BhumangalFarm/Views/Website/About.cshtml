@model OmPrabha.Models.Website

@{
    ViewBag.Title = "Company Profile";
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}

<div class="page-title" style="background: #f4f4f4 url('../../webAssets/img/bg.jpg');" data-overlay="5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="breadcrumbs-wrap position-relative z-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">About Us</li>
                    </ol>
                    <h2 class="breadcrumb-title">About Us - Who We Are?</h2>
                </div>

            </div>
        </div>
    </div>
</div>

<section>

    <div class="container">

        <!-- row Start -->
        <div class="row align-items-center">

            <div class="col-lg-6 col-md-6">
                <div class="story-wrap explore-content">

                    <h2 class="mb-3 fw-bold">About Us</h2>
                    <span class="text-muted fs-5">Check out our company story and work process</span>
                    <p class="mt-4">Welcome to <b>OmPrabha</b> Real Estate, where we believe in transforming dreams into addresses. Founded with a vision to redefine the real estate experience, OmPrabha is committed to integrity, innovation, and personalized service. Our team of seasoned professionals brings a wealth of knowledge and expertise to every transaction, ensuring seamless experiences for both buyers and sellers.</p>
                    <p class="mb-3">At OmPrabha, we specialize in curating exceptional properties that resonate with our clients' lifestyles and aspirations. From luxurious residences to investment opportunities, we meticulously select properties in prime locations, emphasizing quality, value, and sustainability.</p>
                        <p class="mb-3">Driven by a passion for excellence, we strive to exceed expectations at every turn, fostering long-term relationships built on trust and transparency. Whether you're seeking your dream home or looking to maximize the value of your real estate assets, OmPrabha Real Estate is your trusted partner every step of the way. Experience the difference with OmPrabha – where your real estate journey begins.</p>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <img src="~/webAssets/img/immio.jpg" class="img-fluid rounded" alt="">
            </div>

        </div>
        <!-- /row -->

    </div>

</section>
@model OmPrabha.Models.Reports

@{
    ViewBag.Title = "DifferentialIncome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #divload {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url("../files/assets/images/login-gif-11.gif") no-repeat center center rgba(0,0,0,0.25);
    }

    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="loader" id="divload"></div>
@using (Html.BeginForm("DifferentialIncome", "AdminReports", FormMethod.Post, new { @id = "formI" }))
{    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Income</li>
            <li class="breadcrumb-item">Differential Income</li>
        </ul>
    </section>


    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4>Differential Income</h4>
                <p style="color: red">
                </p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    Login ID
                                    @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Search by Login ID" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    From Date
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @autocomplete = "off", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    To Date
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @autocomplete = "off", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <br />
                                    <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="btnSearch" />
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" data-page-length='50' id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Date</th>
                                        <th>To LoginID</th>
                                        <th>To Name</th>
                                        <th>From LoginID</th>
                                        <th>From Name</th>
                                        <th>Amount</th>
                                        <th>Income</th>
                                        <th>Income Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstDifferentialIncome != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstDifferentialIncome)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Date</td>
                                                    <td>@Item.ToLoginId</td>
                                                    <td>@Item.ToUserName</td>
                                                    <td>@Item.FromLoginId</td>
                                                    <td>@Item.FromUserName</td>
                                                    <td>@Item.Amount</td>
                                                    <td>@Item.Income</td>
                                                    <td>@Item.IncomeType</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>


    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

</script>